<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.guestbook.dao.GuestBookDao">

    <select id="listArticle" resultType="guestbookDto">
        SELECT 
            articleno
            , userid
            , subject
            , content 
        FROM guestbook
        ORDER BY articleno DESC
    </select>

    <select id="getArticle" parameterType="int" resultType="guestbookDto">
        SELECT 
            articleno
            , userid
            , subject
            , content 
        FROM guestbook 
        WHERE articleno = #{articleno}
    </select>


    <insert id="writeArticle" parameterType="guestbookDto">
    <!-- <insert id="writeGuestBook" parameterType="com.ssafy.rest.GuestBookDto" useGeneratedKeys="true" keyProperty="articleno"> -->    
        INSERT INTO guestbook 
            (userid, subject, content)
        VALUES 
            (#{userid}, #{subject}, #{content})
    </insert>

    <update id="updateArticle" parameterType="guestbookDto">
        UPDATE guestbook 
        SET subject = #{subject}
            , content = #{content}
        WHERE articleno = #{articleno}
    </update>

    <delete id="deleteArticle" parameterType="int">
        DELETE FROM guestbook
        WHERE articleno = #{articleno}
    </delete>

</mapper>
